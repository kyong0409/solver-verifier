# OpenAI Configuration
# OpenAI API key - Required for LLM functionality
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use (default: gpt-4o-mini)
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# LLM generation settings
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# Agent System Prompts (Optional - auto-loaded from prompts/ directory)
# ANALYZER_SYSTEM_PROMPT=
# VERIFIER_SYSTEM_PROMPT=

# Pipeline Configuration
PIPELINE_CONFIG__MAX_ITERATIONS=5
PIPELINE_CONFIG__ACCEPTANCE_THRESHOLD=3
PIPELINE_CONFIG__ENABLE_STAGE_4_REVIEW=false

# Storage and Output Settings
OUTPUT_DIRECTORY=./output

# Logging Configuration
ENABLE_LOGGING=true
LOG_LEVEL=INFO

# Performance Settings
CONCURRENT_PROCESSING=false
BATCH_SIZE=10

# Development Settings (Optional)
# UVICORN_HOST=0.0.0.0
# UVICORN_PORT=8000
# UVICORN_RELOAD=true